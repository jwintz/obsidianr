{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "sourceMap": true,
        "importHelpers": true,
        "lib": [ "DOM", "ES2020" ],
        "types": [ "node", "obsidian" ],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [ "src/**/*.ts" ],
    "exclude": [ "node_modules" ]
}
